{
  "name": "@flashparking-lab/workflow-test",
  "version": "0.0.0",
  "description": "Testing the workflow for FPQA Automation CI",
  "main": "server.js",
  "dependencies": {
    "express": "^4.13.3",
    "mocha": "^3.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "commitizen": "^4.2.3",
    "cz-emoji": "^1.3.1",
    "gulp": "^3.9.0",
    "gulp-istanbul": "^1.1.3",
    "gulp-mocha": "^2.2.0",
    "husky": "^4.3.8",
    "mocha-junit-reporter": "^1.12.0",
    "nyc": "^12.0.2",
    "semantic-release": "^17.3.6"
  },
  "scripts": {
    "build": "nyc --reporter=cobertura --reporter=html ./node_modules/.bin/mocha tests/**/*.js --reporter mocha-junit-reporter --reporter-options mochaFile=./TEST-RESULTS.xml",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    },
    "cz-emoji": {
      "conventional": true,
      "symbol": true,
      "skipQuestions": [
        "scope"
      ]
    }
  }
}
